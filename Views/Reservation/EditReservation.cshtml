@model healthcare_system.ViewModels.EditTermReservationViewModel

<h1>Uredi termin za pacienta</h1>
<form asp-controller="Reservation" asp-action="EditReservationSave" method="post" class="flex-column">
        
        <h2>Podatki o pacientu</h2>
        <p>@Model.patient.FirstName @Model.patient.LastName</p>
        <p>@Model.patient.EmailAddress</p>
        <p>@Model.patient.Age</p>

        <h2>Podatki o zdravniku</h2>
        <p>@Model.doctor.FirstName @Model.doctor.LastName</p>
        <p>@Model.doctor.Email</p>
        <p>@Model.doctor.DepartmentId</p>
        <p>@Model.doctor.Specialization</p>

        <div class="form-group">
            <label asp-for="@Model.Date" class="form-label">Reservation Date</label>
            <input asp-for="@Model.Date" type="date" class="form-control" value="@Model.Date"/>
            <span asp-validation-for="@Model.Date" class="text-danger"></span>
        </div>
        <input asp-for="@Model.ReservationId" type="hidden" value="@Model.ReservationId" />

        <button type="submit" class="btn btn-primary">Save changes</button>
    
</form>








