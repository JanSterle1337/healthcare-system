@using healthcare_system.ViewModels;
@model healthcare_system.ViewModels.DoctorLoginViewModel
@{
   var doctor = ViewData["DoctorLoginViewModel"] as DoctorLoginViewModel;
}

<h2>Doctor Login</h2>

<form asp-controller="LoginDoctor" asp-action="CheckAndLogIn" method="post">

    <div class="form group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-controller" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-controller" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form group">
        @if(doctor!=null)
        {
            <h6>@doctor.WrongInput</h6>
        }
        
    </div>
    <button type="submit">Log in</button>

</form>